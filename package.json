{
	"name": "online-cbr-reader",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"postinstall": "npm run setup:libarchive",
		"setup:libarchive": "mkdir -p static/libarchive && cp -r node_modules/libarchive.js/dist/* static/libarchive/ 2>/dev/null || echo 'libarchive will be copied after install'"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.5",
		"@sveltejs/kit": "^2.7.2",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"gh-pages": "^6.3.0",
		"postcss": "^8.4.49",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.8",
		"tailwindcss": "^3.4.15",
		"tslib": "^2.8.1",
		"typescript": "^5.6.3",
		"vite": "^5.4.11"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.9",
		"fflate": "^0.8.2",
		"libarchive.js": "^2.0.2"
	}
}
